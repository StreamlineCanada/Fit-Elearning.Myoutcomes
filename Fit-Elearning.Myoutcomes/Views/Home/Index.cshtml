@using Fit_Elearning.MyOutcomes.Domain.Concrete
@using Fit_Elearning.MyOutcomes.Models
@model Fit_Elearning.MyOutcomes.Models.TrainingRoom



<!--dashboard -->
    <div class="row dashboard">
        <div class="col-lg-5 col-md-6 col-xs-12 col-sm-12">
            @if (Model.nextLessonLabel == "Introduction")
            {
                <h1>Welcome @Model.userName</h1>
            }
            else
            {
                <h1>Welcome back @Model.userName</h1>
            }

            @if (Model.showProgress)
            {
                <h5>Start Here:</h5>
                <h3>
                    <a href="~/Home/Training_Room#lessonid_@Model.nextLessonId">@Model.nextLessonLabel</a>
                    <a href="~/Home/Training_Room#lessonid_@Model.nextLessonId"><br /><img src="../../Images/dashboard/film_icon2.gif" border="0" /></a>
                </h3>
            }


            @if (Model.isBasicUser)
            {
                if (Model.showBasicCertificateLink)
                {
                    <h4>Congratulations, Lessons 1 - 12 Complete</h4><br />
                    <p>Click below to get your printable Certificate of Completion (Lessons 1 - 12)</p>
                    <a href="/Home/Request_Certificate" target="_blank"><img src="~/Images/CERTIFICATE.jpg"></a><br />

                    if (Model.ceUnitUrl != "")
                    {
                        <br /><a href="@Model.ceUnitUrl" target="_blank">Click for CE Credit</a>
                    }
                }
                else
                {
                    if (Model.basicOverallCourseScore >= 0)
                    {

                    <br />
                    <p>
                        Thank you for completing FIT eLearning Lessons 1 - 12.<br/>
                        Your overall average was <b>@Model.basicOverallCourseScore</b>%.<br/>
                        You may want to consider retaking the lessons.
                    </p>

                    }
                }
            }


            @if (Model.isAdvancedUser)
            {

                if (Model.showAdvancedCertificateLink)
                {
                    <br /><br /><h4>Congratulations, Lessons 13 - 14 Complete</h4><br />

                }
                else
                {
                    if (Model.advancedOverallCourseScore >= 0)
                    {

                        <br />
                        <p>
                            Thank you for completing FIT eLearning Lessons 13 - 14.<br/>
                            Your overall average was <b>@Model.advancedOverallCourseScore</b>%.<br/>
                            You may want to consider retaking the lessons.
                        </p>

                    }
                }
            }





            <!--dotted line -->
            <img src="../../Images/dashboard/line_dotted.jpg" />

            <!--second part -->

            <h4>Learn About FIT eLearning</h4>
            <h3>
                <a href="About_FIT_Tutorial">Learn more...<br /><img src="../../Images/dashboard/film_icon2.gif" border="0" /></a>
            </h3><br /><br />

        </div>
        

        <div class="col-lg-7 col-md-6 col-xs-12 col-sm-12">
            <!-- **** START BOTTOM SCALE ****--->
            @Html.Partial("~/Views/Shared/_Progress.cshtml", Model)
            <!-- **** END BOTTOM SCALE ****---->

        </div>
        
        <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">&nbsp;</div>
</div>



